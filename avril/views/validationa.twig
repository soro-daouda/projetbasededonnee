<!DOCTYPE html>
<html>
	<head>
		<title>validation Achat</title>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
	    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.6/css/mdb.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
	    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.6/js/mdb.min.js"></script>
		<script type="text/javascript" src="js/jquery-3.3.1.min.js"></script>

		<style type="text/css">
			body{
				background-color: #FDA126;
			}
			.text-center{
				color: white; font-weight: bolder; border: 3px solid #fff; border-radius: 3px
			}
			.valider{
				background-color: green;
				color: #fff;
				border-radius: 20px;
				padding: 7px 0px;
			}
		</style>

	</head>
	<body>
		<div>
			<div style="">
				<header>

					<script>
						$(function(){
							function somme(){
								let prix_u = $('#prix_unitaire').val()
								let nb_vente = $('#quantite').val()
								let somme = prix_u * nb_vente;
								$('#prix_total').val(somme +' fcfa');
							    return console.log(somme);
									}
									somme()
							});
									</script>
					<div class="container mt-5 mb-5">
						<h1 class="text-center" style="">Valider votre Achat</h1>
					</div>
				</header>
				<section>
					<div class="container">
						<div class="row">
							<div class="col-md-6 text-left">
								<div class="col-md-6"><img src="images/{{ infos.images}}" style="border:1px solid #ff; border-radius:3px; margin-bottom:10px"></div>
								<div class="col-md-6"><h5 style="color: #fff; font-weight:bold; text-align:center">{{ infos.nom_produit}} <br> Prix par jour : {{ infos.prix}} FCFA</h5></div>
							</div>
							<div class="col-md-6">
								<div class="col-lg-offset-3 col-lg-6" id="form">
									<form method="post" class="form-group tex-left" >
										<label for="quantité">Qantité</label>
										<input type="hidden" name="prix_unitaire" value="{{infos.prix}}" id="prix_unitaire">
										<input type="number" name="quantite" id="quantite" step="1" value="1" onkeyup="let prix_u = $('#prix_unitaire').val()
												let nb_vente = $('#quantite').val()
												let somme = prix_u * nb_vente;
												$('#prix_total').val(somme +' fcfa');" onchange="let prix_u = $('#prix_unitaire').val()
												let nb_vente = $('#quantite').val()
												let somme = prix_u * nb_vente;
												$('#prix_total').val(somme +' fcfa');" class="form-control">
										<label for="prix_total">Prix total</label>
										<input type="text" name="prix_total" id="prix_total" value="" class="form-control">
										<input type="hidden" name="typeForm" class="form-control" value="validationlocation">
										<input type="hidden" name="id_user" class="form-control" value="{{user.id}}">
										<input type="hidden" name="id_produit_vente" class="form-control" value="{{infos.id}}">
										<button type="submit" class="mt-2 valider" style="width:240px;">Valider</button>
									</form>
								</div>
							</div>	
						</div>
					</div>
				</section>
				{% if reussite %}
					<script type="text/javascript">
						$(function(){
							$('.errorMessage').animate({right:'+=370px'}, 500).delay(5000).animate({right:"-=370px"},500)
						}
						});
					</script>
					<div class="errorMessage display-none text-center" style="border:1px solid green; width:350px; position:fixed;top:10px;right:-370px; background:white; "><span style="color:red; font-weight:bold;">Achat effectuée, retourner à la page de vente </span> <br><a href="vente" class="btn btn-success">Vente</a></div>
				{% endif %}
				<footer>
					<img src="images/achatvente.jpg" style="width: 100%; height: 300px; margin-top: 100px;">
				</footer>
			</div>
		</div>
	</body>
</html>